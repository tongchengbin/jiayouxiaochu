.hidden{
  display: none;
}

.popup-container{
  width: 600rpx;
  overflow: hidden;
  position: fixed;
  top: 50%;
  left: 0;
  z-index: 1000;
  background: #FAFAFA;
  margin: -100px 75rpx 0 75rpx;
  border-radius: 5px;
}
.popup-mark{
  z-index: 999;
  position: fixed;
  width: 100%;
  height: 100%;
  top: 0;
  right: 0;
  left: 0;
  bottom: 0;
  background-color: black;
  opacity: 0.2;
  background: #000;
  opacity: 0.5;
}

.popup-box .popup-desc{
  margin: 40rpx auto;
  text-align: center;
}
.popup-box .popup-btn{
  background-color: #07C160;
}
.popup-box .popup-btn button{
  color: #fff;
  background-color: #07C160;
}