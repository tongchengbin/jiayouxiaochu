/* pages/menuList.wxss */

.hbg{
  background-color:none;
}
.header-search{
  position: fixed;
  height: 90rpx;
  width: 750rpx;
  top: 0;

}

.inner-search{
  margin-top: 15rpx;
  margin-bottom: 15rpx;
  position: fixed;
  padding-left: 50rpx;
  padding-right: 60rpx;
  width: 750rpx;
  height: 60rpx;
  overflow: hidden;
}
.search-input{
  font-size: 32rpx;
  border-radius: 20rpx;
  padding-left: 100rpx;
  position: absolute;
  left: 50rpx;
  width: 440rpx;
  height: 60rpx;
  color: #9a9a9a;
  background-color:	rgb(242, 245, 250);
  display: inline-block;
  }
.search-text{
  font-weight: 500;
 color: #9a9a9a;
  font-size: 30rpx;
  position: absolute;
  left: 580rpx;
  width: 120rpx;
  height: 60px;
  line-height: 1;
  display: inline-block;
  margin-top: 16rpx;
  text-align: center;
}

.searchcion {  
  z-index: 5;
  display: flex;
  position: absolute;  
  left: 90rpx;
  line-height: 40px;
  height: 30px;
  justify-content: center;
  align-items: center;
}  


.container{
  margin-left: 20rpx;
  margin-right: 20rpx;
  margin-top: 80rpx;
}
/* .placeholder-center{
  margin-left: 80rpx;
} */


.container .title{
  font-family: 10rpx;
  font-size: 40rpx;
  margin: 20rpx;
}

.box{
  width: 710rpx;
}
.item{
  width: 100%;
  height: 170rpx;
  margin:30rpx 0rpx;
}
.item .item-img{
  border-radius: 5rpx;
  float: left;
  height: 170rpx;
  width: 280rpx;
  overflow: hidden;
}
.item .item-img image{
  width: 100%;
  height: 100%;
}

.item .item-info{
  float: right;
  width: 400rpx;  
}
.item .item-info .item-title{
  margin-bottom: 10rpx;
  font-size: 31rpx;
  font-weight: bold;  
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.item .item-info .item-foods{
  font-size: 25rpx;
  margin-bottom: 10rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.item .item-info .item-rate{
  margin-top: 45rpx;
  font-size: 25rpx;
}

.item-rate .item-dz{
  display: inline-block;
  margin-right: 20rpx;
}
.item-rate .item-sc{
  display: inline-block;
}

.search-list{
  z-index: 999;
  position: fixed;
  top: 80rpx;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: #fff;
  padding: 20rpx 30rpx;
}

.history-title{
  margin: 10rpx 0;
  font-size: 30rpx;
  color: #7e7e7e;
}
.key-name{
  color: #5e5e5e;
  padding: 5rpx 25rpx;
  margin: 8rpx 12rpx;
  border-radius: 25rpx;
  background-color: rgb(242, 245, 250);
  
  font-size: 28rpx;
  display: inline-block;
  font-family: "微软雅黑";
}