/* pages/menuList.wxss */


.header-search{
  position: fixed;
  height: 80rpx;
  width: 750rpx;
  background-color: #F1F0F5;
  top: 0;
}

.inner-search{
  position: fixed;
  margin:5px 0;
  padding-left: 50rpx;
  padding-right: 60rpx;
  width: 750rpx;
  height: 30px;
  overflow: hidden;
}
.search-input{
  border-radius: 10rpx;
  padding-left: 90rpx;
  position: absolute;
  left: 50rpx;
  width: 440rpx;
  height: 30px;
  background-color:	#FFFFFF;
  display: inline-block;
  }
.search-text{
  position: absolute;
  left: 580rpx;
  width: 120rpx;
  height: 30px;
  display: inline-block;
  margin-top: 0;
  text-align: center;
  line-height: 30px;
  color: 	#DC143C;
}

.searchcion {  
  z-index: 5;
  display: flex;
  position: absolute;  
  left: 90rpx;
  line-height: 40px;
  height: 30px;
  justify-content: center;
  align-items: center;
}  


.container{
  margin-left: 20rpx;
  margin-right: 20rpx;
  margin-top: 80rpx;
}
/* .placeholder-center{
  margin-left: 80rpx;
} */


.container .title{
  font-family: 10rpx;
  font-size: 40rpx;
  margin: 20rpx;
}

.box{
  width: 710rpx;
}
.item{
  width: 100%;
  height: 170rpx;
  margin:30rpx 0rpx;
}
.item .item-img{
  border-radius: 5rpx;
  float: left;
  height: 170rpx;
  width: 280rpx;
  overflow: hidden;
}
.item .item-img image{
  width: 100%;
  height: 100%;
}

.item .item-info{
  float: right;
  width: 400rpx;  
}
.item .item-info .item-title{
  margin-bottom: 10rpx;
  font-size: 31rpx;
  font-weight: bold;  
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.item .item-info .item-foods{
  font-size: 25rpx;
  margin-bottom: 10rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.item .item-info .item-rate{
  margin-top: 45rpx;
  font-size: 25rpx;
}

.item-rate .item-dz{
  display: inline-block;
  margin-right: 20rpx;
}
.item-rate .item-sc{
  display: inline-block;
}

.search-list{
  z-index: 999;
  position: fixed;
  top: 80rpx;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: #fff;
  padding: 20rpx 30rpx;
}

.history-title{
  margin: 20rpx 0;
}
.key-name{
  padding: 10rpx;
  margin: 8rpx 12rpx;
  border-style: solid;
  border-radius: 15rpx;
  border-width: 2rpx;
  border-color: #A8A8A8;
  
  font-size: 33rpx;
  display: inline-block;
  font-family: "微软雅黑";
}