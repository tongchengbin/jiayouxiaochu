/**index.wxss**/
.header-search{
  position: fixed;
  z-index: 9999;
  top: 0;
  background-color:#ff6161;
  height: 90rpx;
  width: 100% 
}
.icon-search{
  vertical-align: middle;
  line-height: 15rpx;
  margin-right: 15rpx;
}
.inner-search{
  display: flex;
  align-items: center;
  width: 550rpx;
  margin: auto;
  height: 60rpx;
  justify-content: center;
  background-color: #fff;
  border-radius: 10rpx;
  text-align: center;
  font-size: 28rpx;
  color: #A8A8A8;
  
}
.inner-search icon{
  height: 28rpx;
  line-height: 1;
}
.inner-search text{
  font-size: 28rpx;
  line-height: 1;
}
/* lb */
.body{
  margin-top: 90rpx;
  height: 300rpx;
  width: 100%
}
.slide-image{
  width: 100%!important;
}
.container{
  padding: 20rpx 0rpx;
}
.container .title{
  margin: auto;
  text-align: center;
  color: #6b6a6a;
  font-weight: bold;
  font-size: 28rpx;
}
.box{
  margin: auto;
  width: 670rpx;
  padding:20rpx 0;
  display: flex;
  flex-wrap:wrap;
}
.item{
  width: 100%;
  padding: 20rpx 0rpx;
  margin: auto;
  overflow-y: hidden;
  border-radius: 25rpx;
}
.item  text{
    color: #333;
    font-size: 26rx;
    font-weight: 650;
    display: -webkit-box;
    overflow: hidden;
    text-overflow: ellipsis;
    word-wrap: break-word;
    white-space: normal !important;
    -webkit-line-clamp: 1;
    -webkit-box-orient: vertical;
}

.item image{
  width: 100%;
  height: 450rpx;
}


