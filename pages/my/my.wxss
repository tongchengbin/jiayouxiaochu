.user-menu{
    width: 100%;
    height: auto;
    overflow: hidden;
    background: #fff;
}

.user-menu .item{
    float: left;
    width: 248rpx;
    height: 187.5rpx;
    border-right: 3rpx solid rgba(0,0,0,.15);
    border-bottom: 2rpx solid rgba(0,0,0,.15);
