.container{
  margin: 10rpx 5rpx;
}
.box{
  display: flex;
  justify-content: center;
  align-items: center;
  flex-wrap: wrap;
  width: 750rpx;
  margin: 30rpx 10rpx;
}

.box .item{
  width: 710rpx;
  overflow: hidden;
  margin-top: 10rpx;
  margin-bottom: 10rpx;
}

.item .item-img{
  float: left;
  width: 290rpx;
  height: 200rpx; 
}
.item .item-img image{
  width: 100%;
  height: 100%;
}
.item .item-info{
  margin-top: 10rpx;
  margin-left: 10rpx;
  width: 400rpx;
  float: right;
}


.item .item-info .item-title{
  margin-bottom: 10rpx;
  font-size: 31rpx;
  font-weight: bold;  
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.item .item-info .item-foods{
  font-size: 25rpx;
  margin-bottom: 10rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.item .item-info .item-rate{
  margin-top: 45rpx;
  font-size: 25rpx;
}

.item-rate .item-dz{
  display: inline-block;
  margin-right: 20rpx;
}
.item-rate .item-sc{
  display: inline-block;
}
.item-dt{
  float: right;
}