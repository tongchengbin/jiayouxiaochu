

.comment .content{
  position: fixed;
  bottom: 0;
  height: 100rpx;
  background-color: #e64340;
  padding: 5rpx 25rpx;
  display: flex;
  justify-content: center;
  align-items: center;

}
.comment .content .content-in{
  border-color: #e64340;
  border-style: initial;
  border-width: 2rpx;
  border-radius: 10rpx;
  padding-left: 5rpx;
  width: 600rpx;
  height: 60rpx;
  background-color: #FFF;
}
.comment .content .submit{
  width: 147rpx;
  text-align: left;
  color: #FFF;
  margin-left: 15rpx;
}


/* 评论 item */
.com-list{
  margin-bottom: 130rpx;
}

.com-item{
  margin:40rpx 20rpx;
}



.com-item .avatar image{
  width: 100%;
  height: 100%;
}
.com-item .item-header{
  line-height: 60rpx;
  height: 60rpx;
  /* display: flex; */
  /* justify-content: left; */

}
.com-item .avatar{
  float: left;
  overflow: hidden;
  height: 60rpx;
  line-height: 60rpx;
  width: 60rpx;
  border-radius: 2rpx;
}
.com-item .username{
  float: left;
  margin: 5rpx 10rpx;
  overflow: hidden;
  height: 60rpx;
  line-height: 60rpx;
  text-align: center;
  font-weight: 2rpx;
}
.item-header .addtime{
  float: right;
}
.item-content{
  margin-top: 10rpx;
  margin-left: 60rpx;
}
